export default function Home() {
  const [view, setView] = useState('feed');
  const [activeTab, setActiveTab] = useState('home');
  const [searchQuery, setSearchQuery] = useState('');
  const [likedDebates, setLikedDebates] = useState({});
  const [bookmarkedDebates, setBookmarkedDebates] = useState({});

  const filteredDebates = sampleDebates.filter(debate => 
    debate.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
    debate.topic.toLowerCase().includes(searchQuery.toLowerCase())
  );

  // 1v1 Debate Section
  if (view === 'debate') {
    return (
      <Debate1v1Section 
        onExit={() => setView('feed')}
      />
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 pb-24">
      {/* Header */}
      <div className="bg-white/95 backdrop-blur-lg border-b border-gray-100 px-4 py-4 sticky top-0 z-40">
        <div className="max-w-2xl mx-auto">
          <div className="flex items-center justify-between mb-4">
            <h1 className="text-3xl font-black bg-gradient-to-r from-orange-500 to-pink-500 bg-clip-text text-transparent">
              ARGU
            </h1>
            <button className="w-10 h-10 rounded-full bg-gradient-to-br from-orange-100 to-pink-100 flex items-center justify-center hover:from-orange-200 hover:to-pink-200 transition-all">
              <User className="w-5 h-5 text-orange-600" />
            </button>
          </div>
          
          {/* Search */}
          <div className="relative">
            <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
            <input
              type="text"
              placeholder="Search debates..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="w-full pl-12 pr-4 py-3 bg-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-orange-400 focus:bg-white transition-all placeholder:text-gray-400"
            />
          </div>
        </div>
      </div>

      {/* User Stats */}
      <UserStatsBar rank="Bronze III" ragePoints={1247} winStreak={3} />

      {/* 1v1 Debate CTA */}
                  <div className="max-w-2xl mx-auto px-4 py-6">
                    <button
                      onClick={() => setView('debate')}
                      className="w-full bg-gradient-to-r from-orange-500 via-orange-500 to-amber-500 text-white rounded-2xl p-6 shadow-xl shadow-orange-200/50 hover:shadow-2xl hover:shadow-orange-300/50 hover:-translate-y-0.5 transition-all duration-300 group"
                    >
                      <div className="flex items-center justify-between">
                        <div className="text-left">
                          <div className="flex items-center gap-2 mb-1">
                            <Swords className="w-6 h-6" />
                            <span className="text-xl font-bold">1v1 Debate</span>
                          </div>
                          <p className="text-sm text-white/80">Challenge the AI â€¢ Pick your topic</p>
                        </div>
                        <div className="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                          <Zap className="w-6 h-6" />
                        </div>
                      </div>
                    </button>
                  </div>

      {/* Quick Stats */}
      <div className="max-w-2xl mx-auto px-4 mb-6">
        <div className="grid grid-cols-3 gap-3">
          <div className="bg-white rounded-xl p-4 text-center border border-gray-100">
            <div className="text-2xl font-bold text-gray-900">247</div>
            <div className="text-xs text-gray-500 mt-1">Active Debates</div>
          </div>
          <div className="bg-white rounded-xl p-4 text-center border border-gray-100">
            <div className="text-2xl font-bold text-gray-900">1.2k</div>
            <div className="text-xs text-gray-500 mt-1">Online Now</div>
          </div>
          <div className="bg-white rounded-xl p-4 text-center border border-gray-100">
            <div className="text-2xl font-bold text-gray-900">89</div>
            <div className="text-xs text-gray-500 mt-1">Your Rank</div>
          </div>
        </div>
      </div>

      {/* Section Header */}
      <div className="max-w-2xl mx-auto px-4 mb-4">
        <div className="flex items-center justify-between">
          <h2 className="text-lg font-bold text-gray-900">Trending Debates</h2>
          <button className="text-sm text-orange-600 font-medium hover:text-orange-700">
            See all
          </button>
        </div>
      </div>

      {/* Debate Feed */}
      <div className="max-w-2xl mx-auto px-4 space-y-4">
        {filteredDebates.map(debate => (
          <DebateCard
            key={debate.id}
            debate={debate}
            isLiked={likedDebates[debate.id]}
            isBookmarked={bookmarkedDebates[debate.id]}
            onLike={() => setLikedDebates(prev => ({ ...prev, [debate.id]: !prev[debate.id] }))}
            onBookmark={() => setBookmarkedDebates(prev => ({ ...prev, [debate.id]: !prev[debate.id] }))}
            onClick={() => {
                                // Could navigate to debate details in future
                              }}
          />
        ))}
      </div>

      {/* Empty State */}
      {filteredDebates.length === 0 && (
        <div className="max-w-2xl mx-auto px-4 py-12 text-center">
          <div className="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Search className="w-8 h-8 text-gray-400" />
          </div>
          <h3 className="text-lg font-semibold text-gray-900 mb-2">No debates found</h3>
          <p className="text-gray-500 text-sm">Try a different search term</p>
        </div>
      )}

      {/* Bottom Nav */}
      <BottomNav activeTab={activeTab} onTabChange={setActiveTab} />
    </div>
  );
}
