import React, { useState, useEffect } from 'react';
import { ArrowLeft, Swords, Zap, Sparkles, Loader2 } from 'lucide-react';
import { motion } from 'framer-motion';
import { base44 } from '@/api/base44Client';
import TopicSelector from './TopicSelector';
import DifficultySelector from './DifficultySelector';

export default function DebateSetup({ onStart, onBack }) {
  const [topic, setTopic] = useState('');
  const [difficulty, setDifficulty] = useState('analyst');
  const [isPolishing, setIsPolishing] = useState(false);
  const [polishedTopic, setPolishedTopic] = useState('');

  const canStart = topic.trim().length >= 10;

  // Auto-polish topic when user stops typing
  const polishTopic = async (topicText) => {
    if (!topicText.trim() || topicText.length < 10) return;
    
    setIsPolishing(true);
    try {
      const response = await base44.integrations.Core.InvokeLLM({
        prompt: `Polish this debate topic for clarity and presentation. 
ONLY improve grammar, wording, and clarity.
DO NOT change the meaning, stance, or intent.
Keep it as a debate proposition (something that can be argued for or against).
Return ONLY the polished topic, nothing else.

Original topic: "${topicText}"`,
        response_json_schema: {
          type: "object",
          properties: {
            polished_topic: { type: "string" }
          },
          required: ["polished_topic"]
        }
      });
      
      if (response?.polished_topic) {
        setPolishedTopic(response.polished_topic);
      }
    } catch (error) {
      console.error('Error polishing topic:', error);
    } finally {
      setIsPolishing(false);
    }
  };

  // Auto-polish when topic changes (debounced)
  useEffect(() => {
    if (topic.trim().length >= 10 && !polishedTopic) {
      const timeout = setTimeout(() => {
        polishTopic(topic);
      }, 1000);
      return () => clearTimeout(timeout);
    }
  }, [topic]);

  const handleStart = () => {
    // Use polished topic if available, otherwise use original
    const finalTopic = polishedTopic || topic;
    onStart(finalTopic, difficulty);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-orange-50 via-white to-amber-50">
      {/* Header */}
      <div className="bg-white/80 backdrop-blur border-b border-gray-100 px-4 py-4 sticky top-0 z-40">
        <div className="max-w-lg mx-auto flex items-center gap-4">
          <button 
            onClick={onBack}
            className="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center hover:bg-gray-200 transition-colors"
          >
            <ArrowLeft className="w-5 h-5 text-gray-600" />
          </button>
          <div>
            <h1 className="text-xl font-bold text-gray-900">ARGU 1v1</h1>
            <p className="text-xs text-gray-500">Challenge the AI</p>
          </div>
        </div>
      </div>

      <div className="max-w-lg mx-auto px-4 py-8 space-y-8">
        {/* Hero */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="text-center"
        >
          <div className="w-20 h-20 mx-auto mb-4 bg-gradient-to-br from-orange-400 to-amber-500 rounded-2xl flex items-center justify-center shadow-lg shadow-orange-200">
            <Swords className="w-10 h-10 text-white" />
          </div>
          <h2 className="text-2xl font-bold text-gray-900 mb-2">Start a Debate</h2>
          <p className="text-gray-500 text-sm">Pick your topic and challenge the AI</p>
        </motion.div>

        {/* Topic Selection */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
          className="space-y-3"
        >
          <TopicSelector value={topic} onChange={(val) => {
            setTopic(val);
            setPolishedTopic(''); // Reset polished on change
          }} />
          
          {/* Auto-polishing indicator */}
          {isPolishing && (
            <div className="flex items-center gap-2 text-xs text-violet-600 bg-violet-50 px-3 py-2 rounded-lg">
              <Loader2 className="w-3 h-3 animate-spin" />
              Auto-polishing topic...
            </div>
          )}
          
          {/* Polished topic preview */}
          {polishedTopic && !isPolishing && (
            <div className="bg-emerald-50 border border-emerald-200 rounded-xl p-3">
              <div className="flex items-center gap-2 text-xs text-emerald-600 mb-1">
                <Sparkles className="w-3 h-3" />
                Polished debate title:
              </div>
              <p className="text-sm text-gray-900 font-medium">{polishedTopic}</p>
            </div>
          )}
        </motion.div>

        {/* Difficulty Selection */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
        >
          <DifficultySelector selected={difficulty} onSelect={setDifficulty} />
        </motion.div>

        {/* Format Info */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
          className="bg-white rounded-2xl p-5 border border-gray-100 shadow-sm"
        >
          <h3 className="font-semibold text-gray-900 mb-3">Debate Format</h3>
          <div className="grid grid-cols-2 gap-4 text-sm">
            <div className="flex items-center gap-2">
              <div className="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center">
                <span className="text-blue-600 font-bold">5</span>
              </div>
              <span className="text-gray-600">Rounds</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center">
                <span className="text-amber-600 font-bold">90s</span>
              </div>
              <span className="text-gray-600">Write time</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-8 h-8 rounded-lg bg-emerald-100 flex items-center justify-center">
                <span className="text-emerald-600 font-bold">15s</span>
              </div>
              <span className="text-gray-600">Read time</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-8 h-8 rounded-lg bg-rose-100 flex items-center justify-center">
                <Zap className="w-4 h-4 text-rose-600" />
              </div>
              <span className="text-gray-600">Live scoring</span>
            </div>
          </div>
        </motion.div>

        {/* Start Button */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.4 }}
        >
          <button
            onClick={handleStart}
            disabled={!canStart}
            className={`w-full py-4 rounded-2xl font-bold text-lg transition-all ${
              canStart
                ? 'bg-gradient-to-r from-orange-500 to-amber-500 text-white shadow-xl shadow-orange-200 hover:shadow-2xl hover:shadow-orange-300 hover:-translate-y-0.5'
                : 'bg-gray-200 text-gray-400 cursor-not-allowed'
            }`}
          >
            {canStart ? 'Start Debate' : 'Enter a topic to continue'}
          </button>
          {!canStart && topic.length > 0 && topic.length < 10 && (
            <p className="text-xs text-gray-400 text-center mt-2">
              Topic must be at least 10 characters
            </p>
          )}
        </motion.div>
      </div>
    </div>
  );
}
